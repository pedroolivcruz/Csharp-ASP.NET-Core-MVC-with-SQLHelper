                                    <th>Data Início</th>
                                    <th>Data Fim</th>
                                    <th>Operador</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    foreach (var item in Model.ListaInfoRastreabilidade)
                                    {
                                        <tr>
                                            <td>@item.Posto</td>
                                            <td>@item.DataInicio</td>
                                            <td>@item.DataFim</td>
                                            <td>@item.Operador</td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

