                        <div class="page-row-tipo-estrutura"><b style="margin-right:10px;">Status:</b> @Model.StatusRastreabilidade</div>
                        <img class="page-row-foto-estrutura-container" src="~/Resources/Estrutura_Frontal.jpeg" />
